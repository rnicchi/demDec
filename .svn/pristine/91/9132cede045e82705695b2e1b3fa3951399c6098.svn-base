

.center {
    text-align: center;
}

.bordo_grey {
    border: 1px solid #B9B9B9;
}

.border_rad_5 {
    border-radius: 5px;
}

.pointer {
    display: block;
    cursor: pointer;
}

.overlay {
    /*background: #457d77;*/
    background: #184977;
    position: fixed;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
    z-index: 100;
    cursor: pointer;
    /*Trasparenza cross browser*/
    opacity: .7;
    filter: alpha(opacity=10);
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=70)";
    display: none;
}

.box {
    /*background-color: #FFF;*/
