 <script type="application/javascript">


 function myFunction() {
	
	    var x = document.getElementById("mySelect").value;
	var y = x.substring(x.length-1);
	    
	    document.getElementById("visibilita").value = y;
	    
	    <%-- per passare la visibilità in caso di select impostata a disabled==true --%>
	    document.getElementById("visibilitaHidden").value = y;
	   }
 
function modificaModaleMetadatiDocFad(toOpenDett, idFad){
 	<%--
	size=$("#metadatiFascicoloFad").length ;	
	if( size>0  ) {	
		$("#metadatiFascicoloFad").empty();
	}
    --%>

	$("#divErrore").empty();	
	
	$.ajax({
		
		url: "<%=request.getContextPath()%><%=ConstantsRequestMapping.MODALI_DOCUMENTI_FAD%>?cmdPOST___modaleMetadatiDocumentiFad=modaleMetadatiDocumentiFad&idFad="+idFad ,
		
	    type: 'POST',
	    data: {
	        json: jsonData
	    },
	    success: function (response) { 
	        var trHTMLdett = '';
	        var trHTMLdettTit = '';
	    	 
	        var comboHTML = '';
	    	   
	  	  $.each(response, function (i, articleDett) {
	  		if(articleDett.title=='ERRORE'){
		  	
	  			 trHTMLdett='';
	  			 trHTMLdettTit = '';
				$("#metadatiFascicoloFad").append("<div class=rowD  align=center><strong>Errore nel recupero dei dati  </strong></div>");
			}else {

				size2=$("#title_modal_0").length;
				if( size2>0  ) {	
					$("#title_modal_0").empty();
				}

 		  	    trHTMLdettTit='<div id=title_modal_1 class=bg-tono0><strong>Documento Fad: '+ articleDett.descFilename + '</strong></div>';
 		  	    
 		  	    $("#title_modal_0").append(trHTMLdettTit);
 		  	 	$('#modaleUpdFadTipoDoc').val(articleDett.tipoDocumento.id);
	 		  	//$('#modaleUpdFadDesc').val(articleDett.textDescrizione);
	 		  	if(articleDett.anagAmminDem != null) {
	 		  		$('#modaleUpdFadAmm').val(articleDett.anagAmminDem.amminWithDesc);
	 		  	}
	 		  	$("#modaleUpdFadVisibilita").val(articleDett.flagVisibilitaCdc01);
	 		  	alert(articleDett.flagVisibilitaCdc01);
	 		  	
	 		  		 		  	
	 		  	comboHTML = '<strong>Descrizione: </strong><form:select path="modaleUpdFadDesc" id="mySelect" onchange="myFunction()"><form:option value="" label="-- Selezionare una descrizione --" />'
	 		  	
 		  		for(var index = 0; index < articleDett.listaDescDocumenti.length; index++){
 		  			comboHTML += '<form:option value="'+ articleDett.listaDescDocumenti[index].id + articleDett.listaDescDocumenti[index].flagVisibilitaCdc + '">' + articleDett.listaDescDocumenti[index].textDescrizione + '</form:option>';
 		  		}
	 		  	
	 		  	comboHTML += '</form:select>';
	 		  	$('#comboDesc').empty();
	 		  	$('#comboDesc').append(comboHTML);
	 		  	$('#modaleUpdFadDesc').val(articleDett.descDocumento.id+ articleDett.descDocumento.flagVisibilitaCdc);
	 		  	
	 		   document.getElementById("mySelect").value =articleDett.descDocumento.id + articleDett.descDocumento.flagVisibilitaCdc;
	 		   document.getElementById("visibilita").value =articleDett.flagVisibilitaCdc01;
	 		<%--  document.getElementById("visibilita").value =articleDett.descDocumento.flagVisibilitaCdc; --%>

			}
	  		
	 
	  	});


	  	apriPopUpModale(toOpenDett);
		
	},

	
    error: function(){
    	
 			$("#metadatiFascicoloFad").append("<div class=rowD align=center><strong>Errore nel recuperare i dati</strong></div>");
			 
			apriPopUpModale(toOpenDett);
    } 

	});


}



function confermaModaleDett() {

	$('.overlay').fadeOut('fast');
    $('.box').hide();
	$('.box_meta').hide();
}



</script>

 
